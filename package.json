{
  "private": true,
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "build-css": "tailwindcss build -i resources/css/app.css -o storage/public/css/tailwind.css",
    "watch-css": "tailwindcss -i resources/css/app.css -o storage/public/css/tailwind.css --watch"
  },
  "devDependencies": {
    "axios": "^0.22.0",
    "laravel-mix": "^6.0.39",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.4.7"
  }
}
